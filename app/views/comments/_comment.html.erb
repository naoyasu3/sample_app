<ul class="row box" id="comment-<%= comment.id %>">
  <div>
    <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
  </div>
  <div>
    <div class="user"><%= link_to comment.user.name, comment.user %></div>
		<div class="content">
			<%= comment.content %>
		</div>
		<div class="timestamp">
			Posted <%= time_ago_in_words(comment.created_at) %> ago.
      <% if current_user?(comment.user) %>
        <%= link_to micropost_comment_path(@micropost, comment), method: :delete, class: "comment-delete-#{comment.id}" do %>
          <%= icon("fas", "trash") %>
        <% end %>
      <% end %>
		</div>
  </div>
</ul>